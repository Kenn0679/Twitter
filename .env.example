# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=4000
BASE_URL=http://localhost:4000
HOST=YourProjectName
FRONTEND_URL=http://localhost:3000
PROJECT_NAME=Twitter Clone

# ===================================
# DATABASE CONFIGURATION (MongoDB Atlas)
# ===================================
# Get your connection credentials from MongoDB Atlas
DB_USER=your-mongodb-username-here
DB_PASS=your-mongodb-password-here
DB_NAME=twitter_clone
DB_USER_COLLECTION=users
DB_REFRESH_TOKEN_COLLECTION=refresh_tokens
DB_FOLLOWERS_COLLECTION=followers
DB_VIDEO_STATUS_COLLECTION=video_status
DB_TWEETS_COLLECTION=tweets
DB_HASHTAGS_COLLECTION=hashtags
DB_BOOKMARKS_COLLECTION=bookmarks
DB_LIKES_COLLECTION=likes
DB_CONVERSATIONS_COLLECTION=conversations

# ===================================
# SECURITY & ENCRYPTION
# ===================================
# Generate a strong random string for password hashing salt
PASSWORD_SECRET=your-password-hash-secret-here

# ===================================
# JWT SECRETS
# ===================================
# Generate strong random strings for these secrets
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ACCESS_SECRET=your-jwt-access-secret-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EMAIL_SECRET=your-email-verify-secret-key-here
JWT_FORGOT_PASSWORD_SECRET=your-forgot-password-secret-key-here

# ===================================
# JWT TOKEN EXPIRATION
# ===================================
ACCESS_TOKEN_EXPIRE=15d
REFRESH_TOKEN_EXPIRE=100d
EMAIL_VERIFY_TOKEN_EXPIRE=7d
FORGOT_PASSWORD_TOKEN_EXPIRE=7d

# ===================================
# GOOGLE OAUTH CONFIGURATION
# ===================================
# Optional - Required only if implementing Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:4000/users/oauth/google
CLIENT_REDIRECT_CALLBACK=http://localhost:3000/login/oauth

# ===================================
# AMAZON CONFIGURATION
# ===================================
# AWS credentials for S3 and SES
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_REGION=ap-southeast-1
SES_FROM_ADDRESS=your-verified-email@example.com
BUCKET_NAME=your-s3-bucket-name-here

