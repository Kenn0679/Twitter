<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <title>{{title}} - {{projectName}}</title>
    <!--[if mso]>
  <style type="text/css">
    body, table, td {font-family: Arial, Helvetica, sans-serif !important;}
  </style>
  <![endif]-->
  </head>
  <body
    style="margin:0;padding:0;background-color:#f5f7fa;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Oxygen,Ubuntu,Cantarell,'Helvetica Neue',sans-serif;"
  >
    <!-- Preview Text (Hidden in email clients) -->
    <div style='display:none;max-height:0;overflow:hidden;mso-hide:all;'>
      {{previewText}}
    </div>

    <table
      role='presentation'
      cellspacing='0'
      cellpadding='0'
      border='0'
      width='100%'
      style='background-color:#f5f7fa;'
    >
      <tr>
        <td align='center' style='padding:40px 20px;'>

          <!-- Main Container -->
          <table
            role='presentation'
            cellspacing='0'
            cellpadding='0'
            border='0'
            width='100%'
            style='max-width:600px;background-color:#ffffff;border-radius:16px;box-shadow:0 4px 24px rgba(0,0,0,0.06);overflow:hidden;'
          >

            <!-- Header Section -->
            <tr>
              <td style='padding:0;background:linear-gradient(135deg,{{primaryColor}} 0%,{{secondaryColor}} 100%);'>
                <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                  <tr>
                    <td style='padding:48px 40px;text-align:center;'>
                      {{#if logo}}
                        <img
                          src='{{logo}}'
                          alt='{{projectName}}'
                          style='max-width:180px;height:auto;margin-bottom:24px;display:block;margin-left:auto;margin-right:auto;'
                        />
                      {{else}}
                        <div
                          style='width:180px;height:64px;background:linear-gradient(135deg,{{primaryColor}} 0%,{{secondaryColor}} 100%);border-radius:16px;margin:0 auto 20px;display:flex;align-items:center;justify-content:center;backdrop-filter:blur(10px);box-shadow:0 2px 12px rgba(0,0,0,0.10);'
                        >
                          <span
                            style="font-size:32px;font-weight:900;font-family:'Segoe Script','Brush Script MT',cursive,sans-serif;color:#fff;letter-spacing:2px;text-shadow:0 2px 8px rgba(0,0,0,0.18);font-style:italic;"
                          >
                            {{projectName}}
                          </span>
                        </div>
                      {{/if}}
                      <h1
                        style='margin:0;font-size:28px;font-weight:700;color:#ffffff;letter-spacing:-0.5px;line-height:1.3;'
                      >
                        {{heading}}
                      </h1>
                      {{#if subheading}}
                        <p style='margin:12px 0 0;font-size:16px;color:rgba(255,255,255,0.9);font-weight:400;'>
                          {{subheading}}
                        </p>
                      {{/if}}
                    </td>
                  </tr>
                </table>
              </td>
            </tr>

            <!-- Content Section -->
            <tr>
              <td style='padding:48px 40px;'>

                <!-- Greeting -->
                <p style='margin:0 0 24px;font-size:16px;color:#1f2937;line-height:1.6;'>
                  {{{greeting}}}
                </p>

                <!-- Main Message -->
                <div style='margin:0 0 32px;font-size:15px;color:#4b5563;line-height:1.7;'>
                  {{{message}}}
                </div>

                {{#if showButton}}
                  <!-- CTA Button -->
                  <table
                    role='presentation'
                    cellspacing='0'
                    cellpadding='0'
                    border='0'
                    width='100%'
                    style='margin:32px 0;'
                  >
                    <tr>
                      <td align='center'>
                        <!--[if mso]>
                    <v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href="{{actionUrl}}" style="height:52px;v-text-anchor:middle;width:200px;" arcsize="10%" stroke="f" fillcolor="{{primaryColor}}">
                      <w:anchorlock/>
                      <center style="color:#ffffff;font-family:sans-serif;font-size:16px;font-weight:bold;">{{buttonText}}</center>
                    </v:roundrect>
                    <![endif]-->
                        <!--[if !mso]><!-->
                        <a
                          href='{{actionUrl}}'
                          style='display:inline-block;padding:16px 48px;background:linear-gradient(135deg,{{primaryColor}} 0%,{{secondaryColor}} 100%);color:#ffffff;text-decoration:none;border-radius:8px;font-weight:600;font-size:16px;letter-spacing:0.3px;box-shadow:0 4px 14px rgba(0,0,0,0.15);transition:all 0.3s ease;text-align:center;min-width:200px;'
                        >
                          {{buttonText}}
                        </a>
                        <!--<![endif]-->
                      </td>
                    </tr>
                  </table>
                {{/if}}

                {{#if showCode}}
                  <!-- Verification Code Box -->
                  <table
                    role='presentation'
                    cellspacing='0'
                    cellpadding='0'
                    border='0'
                    width='100%'
                    style='margin:32px 0;'
                  >
                    <tr>
                      <td
                        style='padding:24px;background:linear-gradient(135deg,#f9fafb 0%,#f3f4f6 100%);border-radius:12px;border:2px dashed {{primaryColor}};text-align:center;'
                      >
                        <p
                          style='margin:0 0 8px;font-size:13px;color:#6b7280;font-weight:600;text-transform:uppercase;letter-spacing:1px;'
                        >
                          {{codeLabel}}
                        </p>
                        <p
                          style="margin:0;font-size:32px;font-weight:700;color:{{primaryColor}};letter-spacing:8px;font-family:'Courier New',monospace;"
                        >
                          {{verificationCode}}
                        </p>
                        {{#if codeExpiry}}
                          <p style='margin:12px 0 0;font-size:13px;color:#9ca3af;'>
                            Expires in
                            {{codeExpiry}}
                          </p>
                        {{/if}}
                      </td>
                    </tr>
                  </table>
                {{/if}}

                {{#if showUrl}}
                  <!-- Alternative Link Box -->
                  <table
                    role='presentation'
                    cellspacing='0'
                    cellpadding='0'
                    border='0'
                    width='100%'
                    style='margin:32px 0 0;'
                  >
                    <tr>
                      <td
                        style='padding:20px;background-color:#f9fafb;border-radius:10px;border-left:4px solid {{primaryColor}};'
                      >
                        <p style='margin:0 0 8px;font-size:13px;color:#6b7280;font-weight:600;'>
                          {{urlLabel}}
                        </p>
                        <p style='margin:0;font-size:13px;color:{{primaryColor}};word-break:break-all;line-height:1.6;'>
                          <a href='{{actionUrl}}' style='color:{{primaryColor}};text-decoration:none;'>{{actionUrl}}</a>
                        </p>
                      </td>
                    </tr>
                  </table>
                {{/if}}

                {{#if showWarning}}
                  <!-- Warning/Info Box -->
                  <table
                    role='presentation'
                    cellspacing='0'
                    cellpadding='0'
                    border='0'
                    width='100%'
                    style='margin:32px 0 0;'
                  >
                    <tr>
                      <td
                        style='padding:20px;background-color:{{warningBgColor}};border-radius:10px;border-left:4px solid {{warningBorderColor}};'
                      >
                        <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                          <tr>
                            <td width='32' valign='top'>
                              <span style='font-size:20px;'>{{warningIcon}}</span>
                            </td>
                            <td style='padding-left:12px;'>
                              <p style='margin:0 0 4px;font-size:14px;color:{{warningTextColor}};font-weight:700;'>
                                {{warningTitle}}
                              </p>
                              <p
                                style='margin:0;font-size:14px;color:{{warningTextColor}};line-height:1.5;opacity:0.9;'
                              >
                                {{warningMessage}}
                              </p>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                {{/if}}

                {{#if showAdditionalInfo}}
                  <!-- Additional Information -->
                  <div style='margin:32px 0 0;padding:20px;background-color:#f9fafb;border-radius:10px;'>
                    {{{additionalInfo}}}
                  </div>
                {{/if}}

              </td>
            </tr>

            <!-- Divider -->
            <tr>
              <td style='padding:0 40px;'>
                <div
                  style='height:1px;background:linear-gradient(to right,transparent,#e5e7eb 20%,#e5e7eb 80%,transparent);'
                ></div>
              </td>
            </tr>

            <!-- Footer Section -->
            <tr>
              <td style='padding:40px;'>

                {{#if showSocialLinks}}
                  <!-- Social Links -->
                  <table
                    role='presentation'
                    cellspacing='0'
                    cellpadding='0'
                    border='0'
                    width='100%'
                    style='margin-bottom:24px;'
                  >
                    <tr>
                      <td align='center'>
                        {{#each socialLinks}}
                          <a href='{{url}}' style='display:inline-block;margin:0 8px;text-decoration:none;'>
                            <img src='{{icon}}' alt='{{name}}' style='width:32px;height:32px;border-radius:8px;' />
                          </a>
                        {{/each}}
                      </td>
                    </tr>
                  </table>
                {{/if}}

                <!-- Contact Info -->
                <p style='margin:0 0 16px;font-size:14px;color:#6b7280;text-align:center;line-height:1.6;'>
                  {{#if contactText}}
                    {{contactText}}
                  {{else}}
                    Questions? We're here to help!
                  {{/if}}
                  <br />
                  <a
                    href='mailto:{{contactEmail}}'
                    style='color:{{primaryColor}};text-decoration:none;font-weight:600;'
                  >{{contactEmail}}</a>
                </p>

                <!-- Company Info -->
                <p style='margin:0;font-size:12px;color:#9ca3af;text-align:center;line-height:1.6;'>
                  {{#if companyAddress}}
                    {{companyAddress}}<br />
                  {{/if}}
                  Â©
                  {{currentYear}}
                  {{projectName}}. All rights reserved.
                </p>

                {{#if showUnsubscribe}}
                  <!-- Unsubscribe Link -->
                  <p style='margin:16px 0 0;font-size:11px;color:#9ca3af;text-align:center;'>
                    <a href='{{unsubscribeUrl}}' style='color:#9ca3af;text-decoration:underline;'>Unsubscribe</a>
                    |
                    <a href='{{preferencesUrl}}' style='color:#9ca3af;text-decoration:underline;'>Email Preferences</a>
                  </p>
                {{/if}}

              </td>
            </tr>

          </table>
          <!-- End Main Container -->

          {{#if footerText}}
            <!-- Extra Footer Text -->
            <table
              role='presentation'
              cellspacing='0'
              cellpadding='0'
              border='0'
              width='100%'
              style='max-width:600px;margin-top:24px;'
            >
              <tr>
                <td style='text-align:center;padding:0 20px;'>
                  <p style='margin:0;font-size:12px;color:#9ca3af;line-height:1.6;'>
                    {{{footerText}}}
                  </p>
                </td>
              </tr>
            </table>
          {{/if}}

        </td>
      </tr>
    </table>
  </body>
</html>